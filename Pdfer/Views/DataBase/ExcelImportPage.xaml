                            <StackPanel Height="60" Orientation="Horizontal">
                                <TextBlock
                         Width="35"
                         Margin="0,5,0,0"
                         VerticalAlignment="Top"
                         Text="Path:" />
                                <TextBox
                         Width="220"
                         Height="50"
                         Margin="10,0,0,0"
                         HorizontalAlignment="Left"
                         Text="{Binding ExcelPath}"
                         TextWrapping="Wrap" />
                            </StackPanel>
                            <StackPanel
                     Height="30"
                     Margin="0,10,0,0"
                     Orientation="Horizontal">
                                <TextBlock
                         Width="35"
                         Margin="0,2,0,0"
                         VerticalAlignment="Top"
                         Text="Sheet：" />
                                <ComboBox
                         x:Name="Sheet"
                         Width="80"
                         Height="20"
                         Margin="10,0,0,0"
                         VerticalAlignment="Top"
                         IsEditable="False"
                         ItemsSource="{Binding Sheets, Mode=OneWay}"
                         SelectedItem="{Binding CurrentSheet, Mode=TwoWay}" />
                                <Button
                         Width="60"
