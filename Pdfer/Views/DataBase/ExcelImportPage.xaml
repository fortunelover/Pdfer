                         VerticalAlignment="Top"
                         Command="{Binding SelectExcelCommand}"
                         Content="选择" />
                                <Button
                         Width="60"
                         Margin="10,0,0,0"
                         VerticalAlignment="Top"
                         Command="{Binding OpenExcelCommand}"
                         Content="打开" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>


            </StackPanel>

            <StackPanel Margin="10,10,0,0">
                <TextBlock
                    Margin="10,0,0,0"
                    FontSize="20"
                    FontWeight="Black"
                    Text="Excel映射配置" />
                <Border
                    Width="700"
                    Height="340"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    BorderBrush="Blue"
                    BorderThickness="1"
                    CornerRadius="10">
                    <StackPanel>

                        <StackPanel
                            Height="20"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="60"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                                配置名称：
                            </TextBlock>
                            <ComboBox
                                x:Name="DbExcel"
                                Width="200"
                                Height="20"
                                DisplayMemberPath="ConfigName"
                                IsEditable="True"
                                IsTextSearchEnabled="False"
                                ItemsSource="{Binding DbExcelMapCollection, Mode=TwoWay}"
                                SelectedItem="{Binding DbExcelMap, Mode=TwoWay}"
                                Text="{Binding DbExcelMap.ConfigName, Mode=TwoWay}" />
                            <TextBlock
                                Width="50"
                                Margin="60,0,0,0"
                                VerticalAlignment="Center">
                                Table：
                            </TextBlock>
                            <TextBox
                                x:Name="Table"
                                Width="300"
                                Height="20"
                                Text="{Binding DbExcelMap.Table, Mode=TwoWay}" />

                        </StackPanel>
                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                            <Button
                                Width="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding NewMapConfigCommand}"
                                Content="新增"
                                IsEnabled="{Binding BtnEnabled, Mode=OneWay}" />
                            <Button
                                Width="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding DeleteMapConfigCommand}"
                                Content="删除"
                                IsEnabled="{Binding BtnEnabled, Mode=OneWay}" />
                            <Button
                                Width="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding SaveMapConfigCommand}"
                                Content="保存"
                                IsEnabled="{Binding BtnEnabled, Mode=OneWay}" />

                            <Button
                                Width="100"
                                Margin="110,0,10,0"
                                HorizontalAlignment="Left"
                                Command="{Binding GetTableStructureCommand}"
                                Content="1.获取表结构"
                                IsEnabled="{Binding BtnEnabled, Mode=OneWay}" />
                            <Button
                                Width="100"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Left"
                                Command="{Binding EntityGeneratorCommand}"
                                Content="2.生成实体类"
                                IsEnabled="{Binding BtnEnabled, Mode=OneWay}" />

                        </StackPanel>
                        <DataGrid
                            Width="680"
                            MaxHeight="280"
                            Margin="10,10,10,0"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding DbExcelMap.ColumnMapCollection, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Binding="{Binding IsMap, Mode=TwoWay}" Header="是否映射" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding DatabaseColumnName, Mode=OneWay}"
                                    Header="列名"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding DatabaseColumnDesc, Mode=OneWay}"
                                    Header="备注"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="60"
                                    Binding="{Binding DataType, Mode=OneWay, Converter={StaticResource TypeToStringConverter}}"
                                    Header="数据类型"
                                    IsReadOnly="True" />
                                <DataGridTemplateColumn Width="60" Header="允许为空">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding IsNullable, Mode=OneWay}"
                                                IsEnabled="False" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding ExcelColumnName, Mode=TwoWay}"
                                    Header="Excel列名" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding DefaultValue, Mode=TwoWay, Converter={StaticResource ObjectToStringConverter}}"
                                    Header="默认值" />

                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel
                Height="70"
                Margin="10,0,0,0"
                Orientation="Horizontal">
                <Button
                    Width="160"
                    Command="{Binding ImportExcelCommand}"
                    Content="Import"
                    IsEnabled="{Binding BtnEnabled, Mode=OneWay}"
                    Style="{StaticResource ButtonSegoe}" />

                <!--<Button
                    Width="160"
                    Margin="20,0,0,0"
                    Command="{Binding ImportExcelTempCommand}"
                    Content="ImportTemp"
                    IsEnabled="{Binding BtnEnabled, Mode=OneWay}"
                    Style="{StaticResource ButtonSegoe}" />-->
            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
